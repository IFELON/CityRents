<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout

        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="25dp"
           android:layout_height="185dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="155dp"
            android:src="@drawable/imageland"
            android:layout_gravity="center"
            android:layout_height="150dp" />

        <TextView
            android:text="Land Lords"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>


</android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="25dp"
            android:layout_height="185dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="155dp"
                    android:src="@drawable/selling"
                    android:layout_gravity="center"
                    android:layout_height="150dp" />

                <TextView
                    android:text="Tenants"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>


        </android.support.v7.widget.CardView>

    </GridLayout>

    <GridLayout

        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_height="185dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="155dp"
                    android:src="@drawable/renthouse"
                    android:layout_gravity="center"
                    android:layout_height="150dp" />

                <TextView
                    android:text="Rental Houses"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_height="185dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="155dp"
                    android:src="@drawable/sb"
                    android:layout_gravity="center"

                    android:layout_height="150dp" />

                <TextView
                    android:text="Selling Houses"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>


        </android.support.v7.widget.CardView>

    </GridLayout>



</LinearLayout>




